{
  "manifest_version": 2,
  "name": "JSON Formatter",
  "description": "Simple JSON Object formatter for Chrome",
  "version": "1.1",
  "author": "Ajith v Giri",
  "background": {
     "scripts": ["background.js"],
     "persistent": false
   },
   "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/logo16.png",
        "32": "images/logo32.png",
        "48": "images/logo48.png",
        "128": "images/logo128.png"
      }
    },
    "icons": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    },
  "permissions": ["declarativeContent","storage"]
}
